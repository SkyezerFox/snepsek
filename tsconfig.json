{
	"compilerOptions": {
		"target": "esnext",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "dist",
		"declaration": true,

		"resolveJsonModule": true,

		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
	"include": ["src/**/*.*", "tests/**/*.*"],
	"exclude": ["node_modules"]
}
